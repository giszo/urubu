Import("env")

sources = [
    "device.c"
]

# add the include directory of the library to the global environment
env["CPPPATH"] += [Dir("include")]

# Build the C library
libdevman = env.StaticLibrary(target = "devman", source = ["src/%s" % x for x in sources])

# Install to the library path of GCC
libdevman_install = Command(
    "#toolchain/%s/lib/gcc/%s-pc-urubu/%s/libdevman.a" % (env["ARCH"], "x86_64", "4.7.3"),
    str(libdevman[0]),
    Action("cp $SOURCE $TARGET", env["CPCOMSTR"]))
Depends(libdevman_install, libdevman)

env["LIBRARIES"].append(libdevman_install)
